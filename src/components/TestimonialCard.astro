---
interface Props {
	name: string;
	videoUrl: string;
}

const { name, videoUrl } = Astro.props;
---

<div class="testimonial-card">
	<h3>{name}</h3>
	<div class="video-container">
		<iframe
			src={videoUrl.replace('view?usp=sharing', 'preview')}
			allow="autoplay; encrypted-media"
			allowfullscreen
			loading="lazy"
		></iframe>
	</div>
</div>

<style>
	.testimonial-card {
		background: rgba(255, 255, 255, 0.9);
		border-radius: 15px;
		padding: 1rem;
		margin: 1rem;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
		flex: 1 1 300px;
		max-width: 400px;
	}

	.testimonial-card:hover {
		transform: translateY(-5px);
	}

	h3 {
		color: rgb(var(--accent));
		text-align: center;
		font-size: 1.5rem;
		margin: 0 0 1rem 0;
	}

	.video-container {
		position: relative;
		padding-bottom: 56.25%;
		height: 0;
		overflow: hidden;
		border-radius: 10px;
	}

	iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: none;
	}
</style>